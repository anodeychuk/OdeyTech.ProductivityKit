<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net472</TargetFramework>
    <LangVersion>9.0</LangVersion>
    <Product>OdeyTech.ProductivityKit</Product>
    <AssemblyTitle>OdeyTech.ProductivityKit</AssemblyTitle>
    <Company>Andrii Odeychuk</Company>
    <Authors>$(Company)</Authors>    
    <Copyright>Copyright © $(Company) 2023.</Copyright>
    <OutputPath>bin\$(Configuration)\</OutputPath>	
    <AssemblyVersion>0.0.39</AssemblyVersion>  
    <Version>$(AssemblyVersion)</Version>	
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <Description>Package contains tools to improve the performance and usability of C# .NET development.</Description>
    <RepositoryUrl>https://github.com/anodeychuk/OdeyTech.ProductivityKit</RepositoryUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageProjectUrl>https://github.com/anodeychuk/OdeyTech.ProductivityKit</PackageProjectUrl>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <PackageTags>Productivity, OdeyTech, Extensions, Monads, Reflection, File Management, Build Information, Utilities</PackageTags> 
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Debug|AnyCPU' ">
    <DebugType>full</DebugType>
  </PropertyGroup>
  <PropertyGroup Condition=" '$(Configuration)|$(Platform)' == 'Release|AnyCPU' ">
    <DebugType>pdbonly</DebugType>
  </PropertyGroup>
  <ItemGroup>
    <None Include="..\OdeyTech.CommonConfigurations\LICENSE">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Data.DataSetExtensions" />
    <Reference Include="Microsoft.CSharp" />
    <Reference Include="System.Net.Http" />
  </ItemGroup>
</Project>